<id-provider>
  <mode>MIXED</mode>
  <form>
    <input name="well_known_endpoint" type="TextLine">
      <label>OIDC provider well-known endpoint</label>
      <help-text></help-text>
      <default>https://accounts.google.com/.well-known/openid-configuration</default>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="userName_claim" type="TextLine">
      <label>Username claim</label>
      <help-text></help-text>
      <default>sub</default>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="userDisplayName_claim" type="TextLine">
      <label>User display name claim</label>
      <help-text></help-text>
      <default>name</default>
      <occurrences minimum="1" maximum="1"/>
    </input>
  </form>
</id-provider>